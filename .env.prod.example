# Production Environment Variables
# Copy this to .env.prod and update with your production values

NODE_ENV=production
LOG_LEVEL=info

# Database Configuration - Production
DB_HOST=postgres
DB_PORT=5432
DB_NAME=fuga_music_prod
DB_USER=fuga_user
DB_PASSWORD=secure_production_password_here

# API Configuration
API_PORT=3000

# Security
SESSION_SECRET=your_secure_session_secret_here

# Request Limits
REQUEST_LIMIT=100kb

# OpenAPI Configuration
OPENAPI_SPEC=/spec
OPENAPI_ENABLE_RESPONSE_VALIDATION=false
