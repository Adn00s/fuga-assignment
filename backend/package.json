{
  "name": "fuga-music-backend",
  "version": "1.0.0",
  "description": "Backend API for Fuga Music Product Management System",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js --config .nodemonrc.json",
    "dev:debug": "nodemon server --exec babel-node --config .nodemonrc.json --inspect",
    "test": "mocha --exit",
    "test:debug": "mocha --inspect-brk --exit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "db:init": "node scripts/init-db.js",
    "db:seed": "node scripts/seed-db.js",
    "db:seed:extensive": "node scripts/seed-db.js extensive",
    "db:seed:minimal": "node scripts/seed-db.js minimal",
    "db:seed:dev": "psql $DATABASE_URL -f scripts/seed-dev.sql"
  },
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "bcrypt": "^6.0.0",
    "body-parser": "^1.20.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-openapi-validator": "^5.4.6",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "pino": "^9.6.0",
    "prisma": "^6.14.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "chai": "^5.2.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.0.0",
    "mocha": "^11.1.0",
    "nodemon": "^3.1.9",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "supertest": "^7.0.0"
  },
  "author": "Carmine DiMascio <cdimascio@gmail.com> (https://github.com/cdimascio)"
}
